<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Registro de destino</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <form action="@Url.Action("Guardar", "Destino")">
                            <input type="hidden" class="form-control" name="id" value="@Model.Id" />
                            <div class="form-group">
                                <label>id municipio :</label>
                                <input class="form-control" name="idMunicipio" value="@if(Model.Id !=0) {@Model.Municipio.Id}"/>

                            </div>
                            <button class="btn btn-success" type="submit">Guardar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


