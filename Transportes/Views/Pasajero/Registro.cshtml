<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Registro de pasajero</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <form action="@Url.Action("Guardar", "Pasajero")">
                            <input type="hidden" class="form-control" name="id" value="@Model.Id" />
                            <div class="form-group">
                                <label>Id boleto: </label>
                                <input class="form-control" name="idBoleto" value="@if(Model.Id != 0) {@Model.Boleto.Id}"/>
                                <label>Numero Asiento: </label>
                                <input class="form-control" name="numeroAsiento" value="@if(Model.Id !=0) {@Model.NumeroAsiento}"/>

                            </div>
                            <button class="btn btn-success" type="submit">Guardar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
