<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Registro de municipio</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <form action="@Url.Action("Guardar", "Municipio")">
                            <input type="hidden" class="form-control" name="id" value="@Model.Id" />
                            <div class="form-group">
                                <label>Nombre: </label>
                                <input class="form-control" name="nombre" value="@if(Model.Id !=0) {@Model.Nombre}"/>
                                <label>Id estado: </label>
                                <input class="form-control" name="idEstado" value="@if(Model.Id !=0) {@Model.Estado.Id}"/>

                            </div>
                            <button class="btn btn-success" type="submit">Guardar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
